{
	"root": true,

	"extends": "@ljharb/eslint-config/node/20",

	"rules": {
		"max-lines-per-function": "off",
	},

	"overrides": [
		{
			"files": "bin.mjs",
			"rules": {
				"no-throw-literal": "off",
			},
		},
		{
			"files": "index.mjs",
			"rules": {
				"no-extra-parens": "off",
			},
		},
		{
			"files": "test/fixtures/**",
			"rules": {
				"strict": "off"
			},
		},
		{
			"files": "test/**",
			"rules": {
				"func-style": "off",
				"max-params": "off",
			},
		},
	],
}
