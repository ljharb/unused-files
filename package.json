{
	"name": "@ljharb/unused-files",
	"version": "0.2.0",
	"description": "List unused files in your package.",
	"bin": "./bin.mjs",
	"main": false,
	"sideEffects": false,
	"exports": {
		"./package.json": "./package.json"
	},
	"scripts": {
		"prepublishOnly": "safe-publish-latest",
		"prepublish": "not-in-publish || npm run prepublishOnly",
		"prepack": "npmignore --auto",
		"lint": "eslint --ext=js,mjs .",
		"postlint": "tsc -p . && attw -P",
		"pretest": "npm run lint",
		"tests-only": "c8 tape 'test/**/*.mjs'",
		"test": "npm run tests-only",
		"posttest": "npx npm@\">= 10.2\" audit --production",
		"version": "auto-changelog && git add CHANGELOG.md",
		"postversion": "auto-changelog && git add CHANGELOG.md && git commit --no-edit --amend && git tag -f \"v$(node -e \"console.log(require('./package.json').version)\")\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ljharb/unused-files.git"
	},
	"keywords": [
		"unused",
		"files",
		"package"
	],
	"author": "Jordan Harband <ljharb@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ljharb/unused-files/issues"
	},
	"homepage": "https://github.com/ljharb/unused-files#readme",
	"dependencies": {
		"knip": "^5.59.1",
		"micromatch": "^4.0.8",
		"object.groupby": "^1.0.3",
		"pargs": "^1.0.3"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"@jest/types": "^29.6.3",
		"@ljharb/eslint-config": "^21.2.0",
		"@ljharb/tsconfig": "^0.3.2",
		"@types/micromatch": "^4.0.10",
		"@types/minimist": "^1.2.5",
		"@types/object.groupby": "^1.0.4",
		"@types/tape": "^5.8.1",
		"@types/webpack": "^5.28.5",
		"auto-changelog": "^2.5.0",
		"c8": "^9.1.0",
		"encoding": "^0.1.13",
		"eslint": "=8.8.0",
		"in-publish": "^2.0.1",
		"npmignore": "^0.3.1",
		"playwright": "^1.55.0",
		"safe-publish-latest": "^2.0.0",
		"tape": "^5.9.0",
		"typescript": "next"
	},
	"engines": {
		"node": "^22.20 || ^24.10 || >= 25"
	},
	"auto-changelog": {
		"output": "CHANGELOG.md",
		"template": "keepachangelog",
		"unreleased": false,
		"commitLimit": false,
		"backfillLimit": false,
		"hideCredit": true
	},
	"publishConfig": {
		"access": "public",
		"ignore": [
			".github/workflows",
			".eslintrc",
			".nycrc",
			"test",
			"jsr.json"
		]
	}
}
